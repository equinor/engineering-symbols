{
	"compilerOptions": {
		"types": ["@types/jest"],
		"sourceMap": true,
		"declarationDir": "types",
		"declaration": true,
		"target": "ES6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"include": ["web/src", "package"],
	// "exclude": ["**/*.stories.tsx", "**/*.test.tsx", "web/.next/*"]
	"exclude": ["**/*.stories.tsx", "web/.next/*"]
}
