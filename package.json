{
	"name": "@equinor/iconor",
	"version": "0.0.1",
	"author": {
		"name": "Dzianis Makeichyk",
		"email": "dzm@equinor.com"
	},
	"license": "MIT",
	"scripts": {
		"lint": "eslint --ext .ts --ext .tsx package --ext .tsx web",
		"ts:testcompile": "tsc --noEmit",
		"prettier:check": "prettier --check .",
		"prettier:write": "prettier --write .",
		"checkcode": "npm run lint && npm run ts:testcompile && npx prettier --check .",
		"prepare": "husky install",
		"convert": "node converter/index.js && npm run package-svgr",
		"package-svgr": "npx @svgr/cli --typescript --no-dimensions --svgo-config ./svgo.config.js --out-dir package/src/components/icon/icons -- svg"
	},
	"engines": {
		"npm": ">= 8.3.1",
		"node": ">= 18.15.0"
	},
	"browser": {
		"fs": false
	},
	"eslintConfig": {
		"overrides": [
			{
				"files": [
					"**/*.stories.*"
				],
				"rules": {
					"import/no-anonymous-default-export": "off"
				}
			},
			{
				"files": [
					"**/*/*.*"
				],
				"rules": {
					"react/no-unknown-property": [
						"error",
						{
							"ignore": [
								"css"
							]
						}
					],
					"react-hooks/rules-of-hooks": "off",
					"react-hooks/exhaustive-deps": "off",
					"@next/next/no-html-link-for-pages": [
						"error",
						"web/pages"
					]
				}
			}
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"dependencies": {
		"lint-staged": "^13.2.3",
		"typescript": "^5.0.4"
	},
	"devDependencies": {
		"@svgr/cli": "^7.0.0",
		"@types/jest": "^29.5.3",
		"eslint": "^8.38.0",
		"husky": "^8.0.3",
		"prettier": "^3.0.0"
	}
}
